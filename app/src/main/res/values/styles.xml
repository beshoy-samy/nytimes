<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.NYTimes.ListPrimaryTitleStyle">
        <item name="android:fontFamily">@font/nunito</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_normal</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme.NYTimes.ListDescStyle">
        <item name="android:fontFamily">@font/nunito</item>
        <item name="android:textColor">@color/list_desc_txt_color</item>
        <item name="android:textSize">@dimen/text_tiny</item>
    </style>

    <style name="Theme.NYTimes.BigTitleStyle">
        <item name="android:fontFamily">@font/nunito_bold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_large</item>
    </style>

    <style name="Theme.NYTimes.SecondaryTitleStyle">
        <item name="fontFamily">@font/nunito</item>
        <item name="android:textColor">@color/list_desc_txt_color</item>
        <item name="android:textSize">@dimen/text_normal</item>
    </style>

    <style name="Theme.NYTimes.AppStyleTitle">
        <item name="android:fontFamily">@font/nunito_bold</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">@dimen/text_normal_medium</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="normal_rounded_corners_shape_appearance">
        <item name="cornerSize">@dimen/radius_normal</item>
        <item name="cornerFamily">rounded</item>
    </style>

    <style name="medium_rounded_corners_shape_appearance">
        <item name="cornerSize">@dimen/radius_medium</item>
        <item name="cornerFamily">rounded</item>
    </style>

    <style name="circle_shape_appearance">
        <item name="cornerSize">50%</item>
        <item name="cornerFamily">rounded</item>
    </style>
</resources>