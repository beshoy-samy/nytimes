<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.beshoy.nytimes">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".NyTimesApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        tools:targetApi="n">
        <activity
            android:name=".features.details.DetailsActivity"
            android:theme="@style/Theme.NYTimes.NoActionBar" />
        <activity
            android:name=".features.home.HomeActivity"
            android:theme="@style/Theme.NYTimes">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>